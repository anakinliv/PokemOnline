<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <init-param>
            <param-name>debug</param-name>
            <param-value>2</param-value>
        </init-param>
        <init-param>
            <param-name>detail</param-name>
            <param-value>2</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>AcceptFriendRequestServlet</servlet-name>
        <servlet-class>com.pokemon.servlet.AcceptFriendRequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchUserResultServlet</servlet-name>
        <jsp-file>/SearchUserResultServlet.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>SendFriendRequestServlet</servlet-name>
        <servlet-class>com.pokemon.servlet.SendFriendRequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemUseAtPeaceServlet</servlet-name>
        <servlet-class>com.pokemon.servlet.ItemUseAtPeaceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DropItemServlet</servlet-name>
        <servlet-class>com.pokemon.servlet.DropItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AcceptFriendRequestServlet</servlet-name>
        <url-pattern>/accept_friend_request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchUserResultServlet</servlet-name>
        <url-pattern>/search_user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendFriendRequestServlet</servlet-name>
        <url-pattern>/send_friend_request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemUseAtPeaceServlet</servlet-name>
        <url-pattern>/item_use_at_peace</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DropItemServlet</servlet-name>
        <url-pattern>/drop_item</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
